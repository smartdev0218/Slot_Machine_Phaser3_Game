{
	"compilerOptions": {
		"target": "ES5",
		"module": "ES2015",
		"noImplicitAny": true,
		"noEmit": true,
		"allowJs": true,
		"jsx": "preserve",
		"importHelpers": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"baseUrl": "./src",
		"paths": {
		  "~/*": ["./*"]
		},
	  },
	  "include": ["src/**/*"]
}